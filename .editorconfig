# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,go,htm,html}]
charset = utf-8


[*.{js,json,htm,html,bash}]
indent_style = space
indent_size = 2

[*.{go}]
indent_style = space
indent_size = 4